{
  "name": "crow-idl",
  "version": "0.0.1",
  "description": "A simple IDL for use with CrowCpp (C++) and TypeScript",
  "module": "index.ts",
  "type": "module",
  "files": [
    "src",
    "index.ts"
  ],
  "types": "src/types.ts",
  "bin": "src/gen.ts",
  "scripts": {
    "format": "tools format bun",
    "dcfg": "cmake --preset debug",
    "rcfg": "cmake --preset release",
    "dcpp": "cmake --build build/Debug",
    "rcpp": "cmake --build build/Release",
    "typechk": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "lint": "eslint --ext .ts src --fix",
    "justtest": "bun test",
    "watch": "bun test --watch",
    "test": "bun run typechk && bun run justtest",
    "*": "Hooks for Husky",
    "prepare": "husky",
    "hook-commit": "bun run format",
    "hook-push": "bun run test"
  },
  "dependencies": {
    "@freik/typechk": "^0.9.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.1.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@freik/workspace": "^0.6.5",
    "@types/bun": "^1.2.19",
    "clang-format": "^1.8.0",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0"
  }
}
